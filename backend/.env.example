# Binance API Configuration
# Copy this file to .env.local and fill in your values

# Market data provider
# binance: Binance REST (may be geo-restricted)
# blockchain_info: blockchain.info BTC ticker (real API fallback)
MARKET_DATA_PROVIDER=binance

# Use testnet for MVP development
BINANCE_TESTNET=true

# Optional: override Spot REST base (for restricted networks)
# Example: https://data-api.binance.vision
BINANCE_SPOT_REST_BASE_URL=


# API credentials (get from Binance)
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here

# Testnet API credentials (get from testnet.binance.vision)
BINANCE_TESTNET_API_KEY=your_testnet_api_key_here
BINANCE_TESTNET_API_SECRET=your_testnet_api_secret_here

# Server configuration
API_PORT=3001
NODE_ENV=development

# Enable WebSocket streaming
ENABLE_WEBSOCKET=false

# Data storage
DATA_DIR=./data

# Logging
LOG_LEVEL=info
